{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
    <h1>Blog</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ blog.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ blog.title }}</td>
            </tr>
            <tr>
                <th>Body</th>
                <td>{{ blog.body }}</td>
            </tr>
            <tr>
                <th>Categories</th>
                <td>{{ blog.categories ? blog.categories|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Author_fname</th>
                <td>{{ blog.authorFname }}</td>
            </tr>
            <tr>
                <th>Author_lname</th>
                <td>{{ blog.authorLname }}</td>
            </tr>
            <tr>
                <th>Author_email</th>
                <td>{{ blog.authorEmail }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('post_index') }}">back to list</a>

    <a href="{{ path('post_edit', {'id': blog.id}) }}">edit</a>

    {{ include('post/_delete_form.html.twig') }}
{% endblock %}
